		 <FrameLayout
			 android:id="@android:id/tabcontent"
			 android:layout_width="match_parent"
			 android:layout_height="match_parent" >
			 <LinearLayout
				 android:id="@+id/tab1kc"
				 android:layout_width="match_parent"
				 android:layout_height="match_parent">
				 <include layout="@layout/tab1_khoanchi"/>
			 </LinearLayout>
			 <LinearLayout
				 android:id="@+id/tab2kc"
				 android:layout_width="match_parent"
				 android:layout_height="match_parent" >
