<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:padding="2dip" />

        <TextView
            android:id="@+id/id"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:padding="2dip"
            android:paddingRight="10dip" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:padding="5dip"
            android:paddingRight="10dip"
            android:text="->" />

        <TextView
            android:id="@+id/txtTenKT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txtNgayThu"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:padding="5dip"
            android:text="ten" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/txtSoTienKT"
            android:layout_alignBottom="@+id/txtSoTienKT"
            android:layout_alignLeft="@+id/textView2"
            android:layout_marginLeft="19dp"
            android:text="Số tiền:" />

        <TextView
            android:id="@+id/txtSoTienKT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/TextView03"
            android:layout_toRightOf="@+id/textView2"
            android:padding="5dip"
            android:text="222" />

        <TextView
            android:id="@+id/txtNgayThu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txtSoTienKT"
            android:layout_alignTop="@+id/TextView03"
            android:padding="5dip"
            android:text="777" />

        <TextView
            android:id="@+id/TextView03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/textView4"
            android:layout_marginBottom="22dp"
            android:text="Ngày thu:" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/txtSoTienKT"
            android:layout_marginLeft="24dp"
            android:layout_toRightOf="@+id/textView1"
            android:text="Tên khoản thu:" />

    </RelativeLayout>

</RelativeLayout>